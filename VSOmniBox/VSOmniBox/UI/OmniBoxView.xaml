<Window x:Class="VSOmniBox.UI.OmniBoxView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:VSOmniBox.UI"
        mc:Ignorable="d" 
        Height="300"
        Width="300"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        Background="{DynamicResource {x:Static local:VSColors.PopupBackgroundBrushKey}}">
    <Window.Content>
        <Border BorderThickness="1.0" BorderBrush="{DynamicResource {x:Static local:VSColors.PopupBackgroundTextBrushKey}}">
            <TextBlock
                Text="The Future Home of VS OmniBox :)"
                FontSize="18"
                Foreground="{DynamicResource {x:Static local:VSColors.PopupBackgroundTextBrushKey}}"
                HorizontalAlignment="Center"
                VerticalAlignment="Center" />
        </Border>
    </Window.Content>
</Window>
